# Job Board Environment Configuration
# Copy this file to .env and update the values

# JWT Secret - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -base64 32
JWT_SECRET=change-this-to-a-secure-random-string-in-production

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password-in-production

# Application Settings
NODE_ENV=production

# Application Port (default: 3000)
# This controls both the port mapping and the internal server port
APP_PORT=3000

# Note: If running the backend directly (not via Docker), use PORT instead:
# PORT=3000
